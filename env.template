# Frontend Environment Variables
NEXT_PUBLIC_API_URL=https://your-backend-domain.com/graphql
NEXT_PUBLIC_WS_URL=wss://your-backend-domain.com/graphql

# Backend URL for API routes
BACKEND_URL=https://your-backend-domain.com

# Node Environment
NODE_ENV=production

# Google OAuth (if using)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# JWT Secret (if needed)
JWT_SECRET=your_jwt_secret

# Database URL (if using direct database connection)
DATABASE_URL=your_database_url 