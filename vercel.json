{
  "buildCommand": "pnpm build:frontend",
  "outputDirectory": "apps/frontend/.next",
  "rootDirectory": ".",
  "installCommand": "pnpm install --prod=false",
  "framework": "nextjs",
  "functions": {
    "apps/frontend/src/app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
} 