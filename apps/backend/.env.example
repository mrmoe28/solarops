# Backend Environment Variables

# Server Configuration
NODE_ENV=production
PORT=4000

# Database (Neon)
DATABASE_URL=postgresql://username:password@host/database?sslmode=require

# JWT Authentication
JWT_SECRET=your-super-secure-jwt-secret-here
JWT_EXPIRES_IN=7d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://solarops-backend.onrender.com/auth/google/callback

# Frontend URLs
FRONTEND_URL=https://solarops-28.vercel.app
FRONTEND_CALLBACK_URL=https://solarops-28.vercel.app/auth/callback

# Redis (for Bull Queue)
REDIS_URL=redis://localhost:6379

# NREL API (for solar data)
NREL_API_KEY=your-nrel-api-key

# Optional: Monitoring
SENTRY_DSN=
LOG_LEVEL=info