{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm db:generate && pnpm build",
  "outputDirectory": ".",
  "installCommand": "cd ../.. && pnpm install",
  "functions": {
    "dist/main.js": {
      "maxDuration": 30,
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/dist/main.js"
    }
  ]
}